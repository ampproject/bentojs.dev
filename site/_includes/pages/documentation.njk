---
title: Documentation
---
{% extends "layouts/base.njk" %}
{% block head %}
  <script src="{{ helpers.addHashQueryParam('/assets/js/documentation.js') }}" async></script>
  <script async src="https://cdn.ampproject.org/v0/bento-sidebar-1.0.js"></script>
{% endblock %}
{% block content %}
<main class="bd-page-components-overview bd-theme--light">
  <div class="bd-page-components-overview-container">
    {%- include 'partials/components/list.njk' -%}
    <div class="bd-page-components-overview-container__main">
      <svg class="bd-page-components-overview-background">
        <use
          xmlns:xlink="http://www.w3.org/1999/xlink"
          xlink:href="/assets/assets.svg#icon-logo-bento"
        ></use>
      </svg>
      <h1>{{ i18n.components.headline }}</h1>
      {%- include 'partials/components/most-used.njk' -%}
      {%- include 'partials/components/components-list.njk' -%}
    </div>
  </div>
</main>
{% endblock %}
{% block footer %}
  {%- include 'partials/components/sidebar-controls.njk' -%}
  {% include 'partials/footer.njk' %}
{% endblock %}