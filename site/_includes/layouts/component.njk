{% extends "layouts/base.njk" %}
{% block head %}
  <script src="{{ helpers.addHashQueryParam('/assets/js/documentation.js') }}" async></script>
  <script async src="https://cdn.ampproject.org/v0/bento-sidebar-1.0.js"></script>
{% endblock %}
{% block content %}
  <main class="bd-page-components bd-theme--light">
    <div class="bd-page-components-container">
      <div class="bd-page-components-container__sidebar">
        {%- include 'partials/components/sidebar.njk' -%}
        <div class="vertical-divider"></div>
      </div>
      <div class="bd-page-components-container__main">
        <svg class="bd-page-components-background">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/assets/assets.svg#icon-logo-bento"></use>
        </svg>
        {{ content | safe }}
      </div>
      <bento-sidebar id="bd-toc" side="right">
        <nav toolbar="(min-width: 767px)" toolbar-target="bd-toc-target">
          <h3>Table of contents</h3>
          {{ content | toc | safe }}
        </nav>
      </bento-sidebar>
      <div class="bd-page-components-container__toc" id="bd-toc-target"></div>
    </div>
  </main>
{% endblock %}
{% block footer %}
  <div class="bd-components-footer">
    <div class="bd-components-footer__mobile">
      {%- include 'partials/components/mobile-footer.njk' -%}
    </div>
    <div class="bd-components-footer__default">
      {% include 'partials/footer.njk' %}
    </div>
  </div>
{% endblock %}