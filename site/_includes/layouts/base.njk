<!DOCTYPE html>
<html lang="{{ locale }}">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="preload" href="/assets/fonts/inter-latin.var.woff2" as="font" crossorigin>
  <link rel="preload" href="/assets/fonts/roboto-mono-latin.var.woff2" as="font" crossorigin>
  <link rel="canonical" href="{{ page.url }}" />
  <script type="module" src="https://cdn.ampproject.org/bento.mjs"></script> 
  <script nomodule src="https://cdn.ampproject.org/bento.js"></script> 
  <link rel="preconnect" href="https://www.google-analytics.com/">

  {% block styles %}{% endblock %}
  {% if helpers.environment === 'prod' %}
  <style>/* bento-dev.css */</style>
  {% else %}
  <link rel="stylesheet" href="{{ helpers.addHashQueryParam('/assets/css/bento-dev.css') }}">
  {% endif %}
  {% if helpers.environment !== 'prod' or ignore %}
  <meta name="robots" content="noindex">
  {% endif %}
  <title>{{ title }} | {{ 'i18n.misc.page_title' | i18n(locale) }}</title>

  <script src="{{ helpers.addHashQueryParam('/assets/js/all.js') }}" async></script>
  {% block head %}{% endblock %}

  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="alternate" type="application/atom+xml" title="RSS Feed for bentojs.dev" href="/feed.xml" />

  <meta property="og:title" content="{{ title }} | {{ 'i18n.misc.page_title' | i18n(locale) }}">
  <meta property="og:url" content="{{ page.url }}">
  <meta property="og:image" content="/assets/img/og.jpg">
  <meta property="og:image:width" content="600">
  <meta property="og:image:height" content="314">
  {% if description -%}
  <meta name="description" content="{{ description }}"/>
  {% endif %}
</head>
<body>
  {% block header %}
    {% include 'partials/header.njk' %}
  {% endblock %}
  {% block content %}{% endblock %}
  {% block footer %}
    {% include 'partials/footer.njk' %}
  {% endblock %}
  {% include 'partials/analytics.njk' %}
  {% include 'partials/cookie-consent.njk' %}
</body></html>
