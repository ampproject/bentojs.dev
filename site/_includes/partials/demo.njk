<section class="bd-demo">
  <bento-selector id="bd-demo-selector" aria-label="Demo selector button group">
    <button option="bd-demo-carousel" class="bd-button--light --uppercase" aria-label="Button demo carousel">carousel</button>
    <button option="bd-demo-accordion" class="bd-button--light --inverted --uppercase" aria-label="Buttom demo accordion">accordion</button>
    <button option="bd-demo-sidebar" class="bd-button--light --inverted --uppercase" aria-label="Button demo sidebar">sidebar</button>
    <button option="bd-demo-social-share" class="bd-button--light --inverted --uppercase" aria-label="Button demo social share">social share</button>
  </bento-selector>

  {% set examples = "assets/iframes/homepage-examples/" %}

  <div class="bd-demo-code">
    <div class="bd-demo-code__snippet">
      <div id="bd-demo-carousel" class="bd-demo-code-sample">
        {% highlight 'html' %}
        {%- include examples + 'bd-demo-carousel.html' -%}
        {% endhighlight %}
      </div>
      <div id="bd-demo-accordion" class="bd-demo-code-sample --hide">
        {% highlight 'html' %}
        {%- include examples + 'bd-demo-accordion.html' -%}
        {% endhighlight %}
      </div>
      <div id="bd-demo-sidebar" class="bd-demo-code-sample --hide">
        {% highlight 'html' %}
        {%- include examples + 'bd-demo-sidebar.html' -%}
        {% endhighlight %}
      </div>
      <div id="bd-demo-social-share" class="bd-demo-code-sample --hide">
        {% highlight 'html' %}
        {%- include examples + 'bd-demo-social-share.html' -%}
        {% endhighlight %}
      </div>
    </div>
    <div class="bd-demo-code__result">
      <iframe id="bd-demo-iframe" src="{{examples}}bd-demo-carousel.html" aria-label="Demo preview"></iframe>
    </div>
  </div>
</section>
